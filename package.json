{
  "name": "pickle-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "biome lint .",
    "postinstall": "lefthook install",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "check": "biome check .",
    "clean": "turbo clean",
    "dev:web": "pnpm --filter web dev",
    "dev:extension": "pnpm --filter extension dev",
    "build:web": "pnpm --filter web build",
    "build:extension": "pnpm --filter extension build",
    "icon": "node packages/icons/scripts/generate-icons.mjs",
    "token": "node packages/ui/scripts/generate-tokens.js",
    "types:local": "npx -y supabase gen types typescript --local > packages/contracts/src/database-generated.ts",
    "types:remote": "npx -y supabase gen types typescript --project-id \"<PROJECT_ID>\" --schema public > packages/contracts/src/database-generated.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/chrome": "^0.1.32",
    "lefthook": "^2.0.9",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=18"
  }
}
