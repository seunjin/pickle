{
  "manifest_version": 3,
  "name": "Pickle",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting",
    "identity",
    "tabs"
  ],
  "host_permissions": ["https://*.supabase.co/*", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/overlay/index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      }
    }
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://picklenote.vercel.app/*",
      "https://*.vercel.app/*"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https: data: blob:;"
  }
}
